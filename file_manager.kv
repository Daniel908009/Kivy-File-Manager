<MainScreen>
    BoxLayout:
        orientation: 'vertical'
        size_hint: (1, 1)
        Label:
            text: 'File Manager'
            size_hint_y: None
            height: 200
        Label:
            text: 'Something interesting will be here'
            size_hint_y: None
            height: 200
        GridLayout:
            cols: 2
            size_hint_y: None
            padding: 20
            Button:
                text: 'Find keywords'
                on_press: root.find_keywords_screen()
                size_hint: (0.5, 0.5)
                padding: 10
            Button:
                text: 'Sort files'
                on_press: root.sort_files_screen()
                size_hint: (0.5, 0.5)
                padding: 10

<File_SortScreen>
    BoxLayout:
        orientation: 'vertical'
        size_hint: (1, 1)
        Label:
            text: 'Sort files'
            size_hint_y: None
            height: 50
        GridLayout:
            cols: 2
            size_hint_y: None
            padding: 20
            Button:
                text: 'Main Menu'
                on_press: root.main_menu_screen()
                size_hint: (0.5, 0.5)
                padding: 10
            Button:
                text: 'Find Keywords'
                on_press: root.find_keywords_screen()
                size_hint: (0.5, 0.5)
                padding: 10

<Key_Word_SearchScreen>
    BoxLayout:
        orientation: 'vertical'
        size_hint: (1, 1)
        Label:
            text: 'Find keywords'
            font_size: 20
            height: 30
        BoxLayout:
            orientation: 'vertical'
            padding: 10
            GridLayout:
                cols: 2
                size_hint_y: None
                padding: 10
                Label:
                    text: 'Enter keywords'
                    font_size: 15
                    height: 30
                TextInput:
                    id: keyword
                    size_hint_y: None
                    height: 30
                Label:
                    text: 'Which directories or files to search?'
                    font_size: 15
                    height: 30
                Button:
                    text: 'Select directories'
                    on_press: root.select_directories() # This will be a popup
                    size_hint_y: None
                    height: 30
            Button:
                text: 'Search'
                on_press: root.search()
                size_hint_y: None
                height: 50
        ScrollView:
            
            GridLayout:
                cols: 1
                padding: 20
                GridLayout:
                    id: search_results_file_selection_header
                    cols: 2
                    size_hint_y: None
                    padding: 20
                    Label:
                        text: 'Name of file'
                        font_size: 15
                        height: 30
                    Label:
                        text: 'Directory of file'
                        font_size: 15
                        height: 30
                    GridLayout:
                        id: search_results_file_selection_menu
                        cols: 2
                        size_hint_y: None
                        padding: 20
                GridLayout:
                    id: search_results_main
                    cols: 2
                    Label:
                        id: search_results_main
                        text: 'Search results will be here'
                        size_hint_y: None
                        height: 50
                    GridLayout:
                        id: search_results
                        cols: 2
                        size_hint_y: None
                        padding: 20

        GridLayout:
            cols: 2
            size_hint_y: None
            padding: 20
            Button:
                text: 'Main Menu'
                on_press: root.main_menu_screen()
                size_hint: (0.5, 0.5)
                padding: 10
            Button:
                text: 'Sort Files'
                on_press: root.sort_files_screen()
                size_hint: (0.5, 0.5)
                padding: 10
        