# main/opening screen
<MainScreen>
    BoxLayout:
        orientation: 'vertical'
        size_hint: (1, 1)
        Label:
            text: 'File Manager'
            size_hint_y: None
            font_size: 60
            height: 200
            color: 0, 0, 1, 1
        Label:
            text: 'Something interesting will be here' # I thought about adding some random jokes here from a file, we will see if I will get to it later
            size_hint_y: None
            height: 200
        GridLayout:
            cols: 2
            size_hint_y: None
            padding: 20
            Button:
                text: 'Find keywords'
                on_press: root.find_keywords_screen()
                size_hint: (0.5, 0.5)
                padding: 10
            Button:
                text: 'Sort files'
                on_press: root.sort_files_screen()
                size_hint: (0.5, 0.5)
                padding: 10

# screen for sorting files
<File_SortScreen>
    BoxLayout:
        orientation: 'vertical'
        size_hint: (1, 1)
        Label:
            text: 'Sort files'
            size_hint_y: None
            size_hint: (1,0.2)
            font_size: 40
            height: 50
        BoxLayout:
            orientation: 'vertical'
            padding: 10
            spacing: 10
            GridLayout:
                cols: 2
                padding: 10
                spacing: 10
                Label:
                    text: 'Select sorting method'
                    font_size: 15
                    height: 45
                    size_hint_y: None
                Spinner:
                    id: sort_method
                    text: 'Select sorting method'
                    values: ['Sort by types', 'Sort by size', 'Sort by date'] # maybe will change later, we will see if I manage to implement them
                    size_hint_y: None
                    height: 45
                Label:
                    text: 'Which directories or files to sort?'
                    font_size: 15
                    height: 45
                Button:
                    text: 'Select directories/files'
                    on_press: root.select_directories()
                    size_hint_y: None
                    height: 45
                Label:
                    text: 'Use original files or copies?'
                    font_size: 15
                    height: 45
                Spinner:
                    id: original_files
                    text: 'Select action'
                    values: ['Use original files', 'Use copies']
                    size_hint_y: None
                    height: 45
        Button:
            text: 'Sort'
            #on_press: root.sort() # will be done later
            size_hint_y: None
            size_hint: (1, 0.2)
            height: 50

        ScrollView:
            GridLayout:
                id: sort_results
                cols: 1
                size_hint_y: None
                height: 0
                padding: 10
                spacing: 10
                Label:
                    text: 'Files selected for sorting will be here'
                    font_size: 20
                    size_hint_y: None
                    height: 30
        GridLayout:
            cols: 2
            size_hint_y: None
            padding: 20
            Button:
                text: 'Main Menu'
                on_press: root.main_menu_screen()
                size_hint: (0.5, 0.5)
                padding: 10
            Button:
                text: 'Find Keywords'
                on_press: root.find_keywords_screen()
                size_hint: (0.5, 0.5)
                padding: 10

# screen for finding keywords
<Key_Word_SearchScreen>
    all_selected_files: []
    BoxLayout:
        orientation: 'vertical'
        size_hint: (1, 1)
        Label:
            text: 'Find keywords'
            font_size: 40
            height: 40
            size_hint_y: None
            size_hint: (1, 0.2)
        BoxLayout:
            orientation: 'vertical'
            padding: 10
            spacing: 10
            GridLayout:
                cols: 2
                size_hint_y: None
                Label:
                    text: 'Enter keywords'
                    font_size: 15
                    height: 45
                TextInput:
                    id: keyword
                    halign: 'right'
                    size_hint_y: None
                    height: 45
                    font_size: 20
                Label:
                    text: 'Which directories or files to search?'
                    font_size: 15
                    height: 45
                Button:
                    text: 'Select directories/files'
                    on_press: root.select_directories()
                    size_hint_y: None
                    height: 45
            Button:
                text: 'Search'
                on_press: root.search()
                size_hint_y: None
                height: 50
        ScrollView:
            GridLayout:
                id: selected
                cols: 1
                size_hint_y: None
                height: 0
                padding: 10
                spacing: 10
                Label:
                    id: selected_files_title
                    text: 'Selected files will be here'
                    font_size: 20
                    size_hint_y: None
                    height: 30
        GridLayout:
            cols: 2
            size_hint_y: None
            padding: 20
            Button:
                text: 'Sort Files'
                on_press: root.sort_files_screen()
                size_hint: (0.5, 0.5)
                padding: 10
            Button:
                text: 'Main Menu'
                on_press: root.main_menu_screen()
                size_hint: (0.5, 0.5)
                padding: 10

# popup for file and directory selection
<File_selecting_popup>
    title: 'Selecting files'
    size_hint: (0.8, 0.8)
    auto_dismiss: False
    caller: None
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        Label:
            text: 'Select directories or files'
            font_size: 20
            size_hint_y: None
            size_hint: (1, 0.3)
        FileChooserListView:
            id: filechooser
            dirselect: True
            filters: ['*.txt'] # this will maybe change later
        GridLayout:
            cols: 2
            size_hint_y: None
            padding: 20
            Button:
                text: 'Cancel'
                on_press: root.cancel()
                size_hint: (0.5, 0.5)
                padding: 10
            Button:
                text: 'Select'
                on_press: root.select()
                size_hint: (0.5, 0.5)
                padding: 10

# popup that contains all the results of the keyword search
<KeyWordsResults>
    title: 'Results'
    BoxLayout:
        orientation: 'vertical'
        size_hint: (1 ,1)
        Label:
            text: 'Results'
            size_hint_y: None
            font_size: 50
            height: 50
        GridLayout:
            cols: 3
            size_hint_y: None
            padding: 10
            Label:
                text: 'Name of the file'
                font_size: 20
            Label:
                text: 'Number of found keywords'
                font_size: 20
            Label:
                text: 'Show content of the file'
                font_size: 20
        ScrollView:
            GridLayout:
                id: results_search
                cols: 1
                size_hint_y: None
                height: 0
                padding: 10
        Button:
            size_hint_y: None
            height: 50
            text: 'Close'
            on_press: root.dismiss()

