<MainScreen>
    BoxLayout:
        orientation: 'vertical'
        size_hint: (1, 1)
        Label:
            text: 'File Manager'
            size_hint_y: None
            height: 100
        GridLayout:
            cols: 2
            size_hint_y: None
            padding: 20
            Button:
                text: 'Find keywords'
                on_press: root.find_keywords_screen()
                size_hint: (0.5, 0.5)
                padding: 10
            Button:
                text: 'Sort files'
                on_press: root.sort_files_screen()
                size_hint: (0.5, 0.5)
                padding: 10

